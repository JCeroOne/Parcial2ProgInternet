<%- include("../segments/top") %>
<header>
    <div class="overlay"></div>
    <form class="content" action="/sesiones/acceso" method="POST">
        <% if(error) { %>
            <p id="login-error"><%= error %></p>    
        <% } %>
        <h1>Acceso</h1>
        <label for="email">Correo electrónico</label><input id="email" name="email" type="email" required>
        <label for="password">Contraseña</label><input id="password" name="password" type="password" required>
        <button>Acceder</button>
        <p>Si no tienes cuenta, <a href="/usuarios/registro">puedes regístrate aquí.</a></p>
    </form>
</header>