<%- include("../segments/top") %>
<header>
    <div class="overlay"></div>
    <form class="content" action="/registro" method="POST">
        <% if(error) { %>
            <p id="login-error"><%= error %></p>    
        <% } %>
        <h1>Registrarse</h1>
        <label for="name">Nombre / Apodo</label><input id="name" type="text" name="name" required>
        <label for="email">Correo electrónico</label><input id="email" type="email" name="email" required>
        <label for="password">Contraseña</label><input id="password" type="password" name="password" required>
        <button>Acceder</button>
        <p>Si ya tienes cuenta, <a href="/acceso">puedes acceder aquí.</a></p>
    </form>
</header>